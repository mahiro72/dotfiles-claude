{
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/save-history.sh PreCompact"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/save-history.sh Stop"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/remind-rules.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "WebSearch",
      "WebFetch(domain:zenn.dev)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:qiita.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:dev.to)",
      "WebFetch(domain:medium.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:developer.mozilla.org)",
      "WebFetch(domain:go.dev)",
      "WebFetch(domain:pkg.go.dev)",
      "WebFetch(domain:docs.python.org)",
      "WebFetch(domain:pypi.org)",
      "WebFetch(domain:nodejs.org)",
      "WebFetch(domain:npmjs.com)",
      "WebFetch(domain:typescriptlang.org)",
      "WebFetch(domain:react.dev)",
      "WebFetch(domain:nextjs.org)",
      "WebFetch(domain:kubernetes.io)",
      "WebFetch(domain:terraform.io)",
      "WebFetch(domain:docs.docker.com)",
      "WebFetch(domain:docs.aws.amazon.com)",
      "WebFetch(domain:cloud.google.com)",
      "WebFetch(domain:learn.microsoft.com)",
      "Bash(ls:*)",
      "Bash(rg:*)",
